'    HSerSend 9
'    HSerPrint "0x"
'    HserPrint Hex(_StepValue_h)
'    HserPrint Hex(_StepValue)
    HSerPrintCRLF
    wait 100 ms

    for _LoopVar = _from to _to
'        HSerPrint _LoopVar
'        HSerPrint ", "
        _ccount++

    next

    HSerPrintCRLF 2
    HSerPrint _LoopVar
    HSerPrint ", "
    HSerPrint _ccount
    HSerPrintCRLF 2
