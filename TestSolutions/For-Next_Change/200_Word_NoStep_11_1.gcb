    dim _LoopVar, _from, _to as Word
    dim _StepValue as Integer
    dim _ccount as long

    //Set the value here.
    _from = 11
    _to =   1
    _StepValue = 0
    _ccount = 0

    wait 2 s
    HSerPrintCRLF 2
    HSerPrint "Test increment."
    HSerPrintCRLF
    HSerPrint "Range "
    HSerPrint _from
    HSerPrint " to "
    HSerPrint _to
